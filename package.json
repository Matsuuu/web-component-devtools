{
    "name": "webcomponent-devtools",
    "version": "0.3.0",
    "description": "Web Component DevTools is aimed at all developers working with Web Components. The tooling provided creates a new Devtools panel, which allows a quick look at the custom elements on the current page, and enables modification of attributes and properties of said components.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Matsuuu/web-component-devtools.git"
    },
    "scripts": {
        "start": "npm run dev",
        "build": "vite build --config vite.config.chrome.ts",
        "build:chrome": "vite build --config vite.config.chrome.ts",
        "build:firefox": "vite build --config vite.config.firefox.ts",
        "bundle": "npm run bundle:chrome && npm run bundle:firefox",
        "bundle:chrome": "vite build --config vite.config.chrome.ts && web-ext build --source-dir ./dist_chrome/ --artifacts-dir ./artifacts --overwrite-dest",
        "bundle:firefox": "vite build --config vite.config.firefox.ts && web-ext build --source-dir ./dist_firefox/ --artifacts-dir ./artifacts --overwrite-dest",
        "dev": "nodemon --config nodemon.chrome.json",
        "dev:chrome": "nodemon --config nodemon.chrome.json",
        "dev:firefox": "nodemon --config nodemon.firefox.json",
        "start:firefox": "web-ext run --source-dir ./dist_firefox/",
        "start:chrome": "web-ext run --source-dir ./dist_chrome/ --target=chromium"
    },
    "type": "module",
    "dependencies": {
        "@awesome.me/webawesome": "^3.0.0",
        "@lit-labs/signals": "^0.1.3",
        "@webcomponents/webcomponentsjs": "^2.8.0",
        "lit": "3.3.0",
        "lucide": "^0.548.0",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.3",
        "@tailwindcss/vite": "^4.1.11",
        "@types/chrome": "^0.1.11",
        "@types/node": "^24.4.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/webextension-polyfill": "^0.12.4",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitejs/plugin-react": "^4.7.0",
        "fs-extra": "^11.3.0",
        "nodemon": "^3.1.10",
        "tailwindcss": "^4.1.8",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-tsconfig-paths": "^5.1.4",
        "web-ext": "^9.1.0"
    },
    "keywords": [
        "webextensions",
        "webextensions-apis",
        "webcomponents",
        "firefox",
        "chrome"
    ]
}
